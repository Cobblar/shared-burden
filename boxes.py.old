import pygame

from constants import (
    BOX_COLORS,
    BOX_NAMES,
    NODE_SIZE,
    NODE_SPACER,
    OUTLINE_OFFSET,
    SCREEN_HEIGHT,
)

boxes = {}

node_mod = 1

for name, color in zip(BOX_NAMES, BOX_COLORS):
    x = (NODE_SPACER * node_mod) + OUTLINE_OFFSET
    y = SCREEN_HEIGHT / 2
    rect = pygame.Rect(x, y, NODE_SIZE, NODE_SIZE)
    boxes[name] = {"rect": rect, "color": color}
    node_mod += 1
